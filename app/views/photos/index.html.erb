<div class="container">
  <div class="row">
    <div>
     Photo App
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-condensed table-bordered">
        <thead >
          <tr>
            <th scope="col">Photo Title</th>
            <th scope="col">Detail</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @photos.each do |photo| %>
            <tr>
              <td><%= photo.title %></td>
              <td><%= button_to 'Show', photo_path(photo), :class => "btn btn-info", method: :get %></td>
              <td><%= button_to 'Edit', edit_photo_path(photo), :class => "btn btn-info", method: :get %></td>
              <td><%= button_to 'Destroy', photo_path(photo), :class => "btn btn-danger", method: :delete,
              data:{ confirm: "Are you sure?" } %></td>
           </tr>
         <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6"> <%= button_to "New Photo", new_photo_path, :class => "btn btn-default", :method => :get %></div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">  <%= link_to 'New Photo', new_photo_path %> </div>
      </div>
    </div>
  </div>
</div>